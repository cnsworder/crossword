# 服务器连接超时
ServerAliveInterval 60
ServerAliveCountMax 12

# 已知主机文件
StrictHostKeyChecking no
UserKnownHostsFile /dev/null

# 连接重用
ControlMaster auto
ControlPath /var/tmp/ssh_mux_%h_%p_%r
ControlPersist 600

# 秘钥转发
ForwardAgent yes

# 连接主机配置
Host aliyun
    HostName 1.2.3.5
    Port 22
    User root
    ForwardX11 yes
    ServerAliveInterval 60
    IdentityFile .ssh/id_rsa
